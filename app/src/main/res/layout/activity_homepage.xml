<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_dark_background"
    android:layout_height="match_parent"
    tools:context="com.example.okanaydin.homeworkrehber.Activities.HomaPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="4dp"
            android:layout_margin="3dp"
            cardview:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:id="@+id/btnEgitim"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@mipmap/hastane_icon"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:text="Eğitim Olanakları"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_margin="3dp"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:id="@+id/btnHastahane"
                    android:background="@color/cardview_light_background"
                    app:srcCompat="@mipmap/hastane_icon"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#333333"
                    android:text="Hastaneler"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="4dp"
            android:layout_margin="3dp"
            cardview:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:id="@+id/btnIOM"
                    android:background="@color/cardview_light_background"
                    app:srcCompat="@mipmap/hastane_icon"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#333333"
                    android:text="IOM"
                    android:gravity="center"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="4dp"
            android:layout_margin="3dp"
            cardview:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:id="@+id/btnPratik"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@mipmap/hastane_icon"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#333333"
                    android:text="Pratik Bilgiler"
                    android:gravity="center"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="4dp"
            android:layout_margin="3dp"
            cardview:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:id="@+id/btnTurkce"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@mipmap/hastane_icon"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#333333"
                    android:text="Türkçe Dersler"
                    android:gravity="center"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="4dp"
            android:layout_margin="3dp"
            cardview:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:id="@+id/btnUlasim"
                    android:background="@color/cardview_light_background"
                    app:srcCompat="@mipmap/hastane_icon"
                    android:scaleType="centerInside" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#333333"
                    android:text="Ulaşım"
                    android:gravity="center"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
